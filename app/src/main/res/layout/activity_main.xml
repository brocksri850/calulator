<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="715dp"
        android:shadowColor="@color/cardview_dark_background"
        android:text="Calculator"
        android:textColor="#F10707"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="28dp"
        android:text="Fisrt Number :"
        android:textColor="#002BFF"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Number :"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"
        android:textColor="#002BFF"
        android:textSize="20dp"
        android:textStyle="bold"
        ></TextView>

    <EditText
        android:id="@+id/e1"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:inputType="number"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="230dp"
        android:textSize="20dp"
        android:textColor="#0EF4BF"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/e2"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="330dp"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#0EF4BF"
        android:textStyle="normal" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="460dp"
        android:background="#127C3131"
        android:text="+"
        android:textColor="#b00000" />


    android:text="+" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="110dp"
        android:text="-"
        android:background="#127C3131"
        android:textColor="#b00000" />

    />
    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="210dp"
        android:text="*"
        android:background="#127C3131"
        android:textColor="#b00000" />

    />
    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="310dp"
        android:text="/"
        android:background="#127C3131"
        android:textColor="#b00000" />

    />


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="594dp"
        android:textSize="30dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="111dp"
        android:layout_height="37dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="657dp"
        android:layout_marginBottom="176dp"
        android:text="Reset"
        android:background="#127C3131"
        android:textColor="#b00000" />

    <Button
        android:id="@+id/next"
        android:layout_width="111dp"
        android:layout_height="37dp"

        android:layout_marginStart="287dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="704dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="131dp"
        android:background="#f09876"
        android:text="Next"
        android:textColor="#00FFFF" />

</RelativeLayout>